@model HotelManagement.Models.RoomType

@{
    ViewBag.Title = "Update";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm("Update", "RoomType", FormMethod.Post))
{
    @Html.HiddenFor(m => m.IDRoomType)
    <div class="container-xxl flex-grow-1 container-p-y">
        <h4 class="fw-bold py-3 mb-4">Loại phòng</h4>
        <div class="card">
            <div class="card-header row">
                <div class="col-md-6">
                    <h5>Sửa loại phòng</h5>
                </div>
                <div class="col-md-6 text-end">
                    <a href="@Url.Action("Index", "RoomType")" class="btn btn-primary text-white"><i class="fa-solid fa-rotate-left"></i> Trở về</a>
                    <button type="submit" class="btn btn-success text-white"><i class="fa-solid fa-floppy-disk"></i> Cập nhật</button>
                </div>
            </div>
            <div class="card-body">
                <div class="form-group">
                    <label for="RoomTypeName">Tên loại phòng</label>
                    @Html.TextBoxFor(m => m.RoomTypeName, new { @class = "form-control my-2" })
                </div>
                <div class="form-group">
                    <label for="StatusRT">Trạng Thái</label>
                    @Html.DropDownListFor(m => m.StatusRT, new SelectList(ViewBag.roomTypeStatus, "IDStatus", "StatusName"), new { @class = "form-control my-2" })
                </div>
            </div>
        </div>
    </div>
}