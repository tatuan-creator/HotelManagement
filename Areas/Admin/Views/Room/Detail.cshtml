@model HotelManagement.Models.Room

@{
    ViewBag.Title = "Detail";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="container-xxl flex-grow-1 container-p-y">
    <h4 class="fw-bold py-3 mb-4">Phòng</h4>
    <div class="card">
        <div class="card-header row">
            <div class="col-md-6">
                <h5>Chi tiết phòng @Model.RoomName <br />tại cụm @Model.Cluster.AddressCluster</h5>
            </div>
            <div class="col-md-6 text-end">
                <a href="@Url.Action("Index", "Room")" class="btn btn-primary text-white"><i class="fa-solid fa-rotate-left"></i> Trở về</a>
            </div>
        </div>
        <div class="table-responsive text-nowrap card-body">
            <table class="table">
                <thead>
                    <tr>
                        <th class="text-center">Số người ở</th>
                        <th class="text-center">Giá</th>
                        <th class="text-center">Diện tích</th>
                    </tr>
                </thead>
                <tbody class="table-border-bottom-0">
                    <tr>
                        <td class="text-center">@Model.Amount</td>
                        <td class="text-center">@Model.Price</td>
                        <td class="text-center">@Model.Area</td>
                    </tr>
                </tbody>
            </table>
            <table class="table">
                <thead>
                    <tr>
                        <th>Mô tả</th>
                    </tr>
                </thead>
                <tbody class="table-border-bottom-0">
                    <tr>
                        <td>@Model.Describe</td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>