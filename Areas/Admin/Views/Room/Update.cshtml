@model HotelManagement.Models.Room

@{
    ViewBag.Title = "Update";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm("Update", "Room", FormMethod.Post))
{
    @Html.HiddenFor(m => m.IDRoom)
    <div class="container-xxl flex-grow-1 container-p-y">
        <h4 class="fw-bold py-3 mb-4">Phòng</h4>
        <div class="card">
            <div class="card-header row">
                <div class="col-md-6">
                    <h5>Sửa phòng</h5>
                </div>
                <div class="col-md-6 text-end">
                    <a href="@Url.Action("Index", "Room")" class="btn btn-primary text-white"><i class="fa-solid fa-rotate-left"></i> Trở về</a>
                    <button type="submit" class="btn btn-success text-white"><i class="fa-solid fa-floppy-disk"></i> Cập nhật</button>
                </div>
            </div>
            <div class="card-body">
                <div class="form-group">
                    <label for="RoomName">Tên phòng</label>
                    @Html.TextBoxFor(m => m.RoomName, new { @class = "form-control my-2" })
                </div>
                <div class="form-group">
                    <label for="RoomType_ID">Loại phòng</label>
                    @Html.DropDownListFor(m => m.RoomType_ID, new SelectList(ViewBag.roomType, "IDRoomType", "RoomTypeName"), new { @class = "form-control my-2" })
                </div>
                <div class="form-group">
                    <label for="Cluster_ID">Cụm</label>
                    @Html.DropDownListFor(m => m.Cluster_ID, new SelectList(ViewBag.cluster, "ID", "AddressCluster"), new { @class = "form-control my-2" })
                </div>
                <div class="form-group">
                    <label for="Price">Giá phòng</label>
                    @Html.TextBoxFor(m => m.Price, new { @class = "form-control my-2" })
                </div>
                <div class="form-group">
                    <label for="Area">Diện tích</label>
                    @Html.TextBoxFor(m => m.Area, new { @class = "form-control my-2" })
                </div>
                <div class="form-group">
                    <label for="Amount">Số người ở</label>
                    @Html.TextBoxFor(m => m.Amount, new { @class = "form-control my-2" })
                </div>
                <div class="form-group">
                    <label for="Describe">Mô tả</label>
                    @Html.TextBoxFor(m => m.Describe, new { @class = "form-control my-2" })
                </div>
                <div class="form-group">
                    <label for="StatusR">Trạng thái</label>
                    @Html.DropDownListFor(m => m.StatusR, new SelectList(ViewBag.roomStatus, "IDStatus", "StatusName"), new { @class = "form-control my-2" })
                </div>
            </div>
        </div>
    </div>
}
