@model IEnumerable<HotelManagement.Models.Payment>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="container-xxl flex-grow-1 container-p-y">
    <h4 class="fw-bold py-3 mb-4">Hình thức thanh toán</h4>
    <div class="card">
        <div class="card-header row">
            <div class="col-md-6">
                <h5>Danh sách hình thức thanh toán</h5>
            </div>
            <div class="col-md-6 text-end">
                <a href="@Url.Action("Create", "Payments")" class="btn btn-success text-white"><i class="fa-solid fa-plus"></i> Thêm</a>
            </div>
        </div>
        <div class="table-responsive text-nowrap card-body">
            <table class="table">
                <thead>
                    <tr>
                        <th class="text-center">Tên hình thức thanh toán</th>
                        <th class="text-center">Trạng thái</th>
                        <th class="text-center">Tác vụ</th>
                    </tr>
                </thead>
                <tbody class="table-border-bottom-0">
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td class="text-center">@item.PaymentsName</td>
                            <td class="text-center">@item.PaymentsStatus.StatusName</td>
                            <td class="text-center">
                                <a href="@Url.Action("Update", "Payments", new {id = item.ID})" class="btn btn-sm btn-warning text-white"><i class="fa-solid fa-pen-to-square"></i></a>
                                <a data-id="@item.ID" class="btn btn-sm btn-danger text-white btn-delete"><i class="fa-solid fa-trash"></i></a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@section footer {
    <script>
        $(".btn-delete").on('click', function () {
            let id = $(this).attr("data-id");
            if (confirm("Bạn có chắc chắn muốn đặt về không hoạt động cho hình thức thanh toán với id: " + id)) {
                window.location.href = '/Admin/Payments/Delete?id=' + id;
            }
        })
    </script>
}
