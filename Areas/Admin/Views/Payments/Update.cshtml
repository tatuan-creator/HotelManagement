@model HotelManagement.Models.Payment

@{
    ViewBag.Title = "Update";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm("Update", "Payments", FormMethod.Post))
{
    @Html.HiddenFor(m => m.ID)
    <div class="container-xxl flex-grow-1 container-p-y">
        <h4 class="fw-bold py-3 mb-4">Hình thức thanh toán</h4>
        <div class="card">
            <div class="card-header row">
                <div class="col-md-6">
                    <h5>Sửa hình thức thanh toán</h5>
                </div>
                <div class="col-md-6 text-end">
                    <a href="@Url.Action("Index", "Payments")" class="btn btn-primary text-white"><i class="fa-solid fa-rotate-left"></i> Trở về</a>
                    <button type="submit" class="btn btn-success text-white"><i class="fa-solid fa-floppy-disk"></i> Cập nhật</button>
                </div>
            </div>
            <div class="card-body">
                <div class="form-group">
                    <label for="PaymentsName">Tên hình thức thanh toán</label>
                    @Html.TextBoxFor(m => m.PaymentsName, new { @class = "form-control my-2" })
                </div>
                <div class="form-group">
                    <label for="PaymentS">Trạng Thái</label>
                    @Html.DropDownListFor(m => m.PaymentS, new SelectList(ViewBag.paymentsStatus, "IDStatus", "StatusName"), new { @class = "form-control my-2" })
                </div>
            </div>
        </div>
    </div>
}