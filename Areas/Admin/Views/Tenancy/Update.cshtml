@model HotelManagement.Models.Tenancy

@{
    ViewBag.Title = "Update";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm("Update", "Tenancy", FormMethod.Post))
{
    @Html.HiddenFor(m => m.ID)
    <div class="container-xxl flex-grow-1 container-p-y">
        <h4 class="fw-bold py-3 mb-4">Hợp đồng</h4>
        <div class="card">
            <div class="card-header row">
                <div class="col-md-6">
                    <h5>Sửa hợp đồng</h5>
                </div>
                <div class="col-md-6 text-end">
                    <a href="@Url.Action("Index", "Tenancy")" class="btn btn-primary text-white"><i class="fa-solid fa-rotate-left"></i> Trở về</a>
                    <button type="submit" class="btn btn-success text-white"><i class="fa-solid fa-floppy-disk"></i> Cập nhật</button>
                </div>
            </div>
            <div class="card-body">
                <div class="form-group">
                    <label for="CustomerID">Khách hàng</label>
                    @Html.DropDownListFor(m => m.CustomerID, new SelectList(ViewBag.customer, "ID", "FullName"), new { @class = "form-control my-2" })
                </div>
                <div class="form-group">
                    <label for="RoomName">Tên phòng</label>
                    @Html.TextBoxFor(m => m.Room.RoomName, new { @class = "form-control my-2" })
                </div>
                <div class="form-group">
                    <label for="Deposit">Số tiền đặt cọc</label>
                    @Html.TextBoxFor(m => m.Deposit, new { @class = "form-control my-2" })
                </div>
                <div class="form-group">
                    <label for="TenancyDate">Ngày ký hợp đồng</label>
                    @Html.TextBoxFor(m => m.TenancyDate, new { @class = "form-control my-2" })
                </div>
                <div class="form-group">
                    <label for="TimeStart">Ngày bắt đầu</label>
                    @Html.TextBoxFor(m => m.TimeStart, new { @class = "form-control my-2" })
                </div>
                <div class="form-group">
                    <label for="TimeEnd">Ngày ký kết thúc</label>
                    @Html.TextBoxFor(m => m.TimeEnd, new { @class = "form-control my-2" })
                </div>
                <div class="form-group">
                    <label for="TenancyRoom">Trạng thái</label>
                    @Html.DropDownListFor(m => m.TenancyStatus.IDStatus, new SelectList(ViewBag.tenancyStatus, "IDStatus", "StatusName"), new { @class = "form-control my-2" })
                </div>
            </div>
        </div>
    </div>
}