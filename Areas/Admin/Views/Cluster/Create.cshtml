@model HotelManagement.Models.Cluster

@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm("Create", "Cluster", FormMethod.Post))
{
    <div class="container-xxl flex-grow-1 container-p-y">
        <h4 class="fw-bold py-3 mb-4">Cụm Phòng</h4>
        <div class="card">
            <div class="card-header row">
                <div class="col-md-6">
                    <h5>Thêm cụm phòng</h5>
                </div>
                <div class="col-md-6 text-end">
                    <a href="@Url.Action("Index", "Cluster")" class="btn btn-primary text-white"><i class="fa-solid fa-rotate-left"></i> Trở về</a>
                    <button type="submit" class="btn btn-success text-white"><i class="fa-solid fa-plus"></i> Thêm</button>
                </div>
            </div>
            <div class="card-body">
                <div class="form-group">
                    <label for="AddressCluster">Địa chỉ cụm phòng</label>
                    @Html.TextBoxFor(m => m.AddressCluster, new { @class = "form-control my-2" })
                </div>
                <div class="form-group">
                    <label for="ManagementName">Tên quản lý cụm</label>
                    @Html.TextBoxFor(m => m.ManagementName, new { @class = "form-control my-2" })
                </div>
                <div class="form-group">
                    <label for="ManagementPhone">Số điện thoại quản lý</label>
                    @Html.TextBoxFor(m => m.ManagementPhone, new { @class = "form-control my-2" })
                </div>
                <div class="form-group">
                    <label for="ManagementEmail">Email quản lý</label>
                    @Html.TextBoxFor(m => m.ManagementEmail, new { @class = "form-control my-2" })
                </div>
                <div class="form-group">
                    <label for="ClusterS">Trạng thái</label>
                    @Html.DropDownListFor(m => m.ClusterS, new SelectList(ViewBag.ClusterStatus, "IDStatus", "StatusName"), new { @class = "form-control my-2" })
                </div>
            </div>
        </div>
    </div>
}