@model HotelManagement.Models.Cluster

@{
    ViewBag.Title = "Update";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm("Update", "Cluster", FormMethod.Post))
{
    @Html.HiddenFor(m => m.ID)
    <div class="container-xxl flex-grow-1 container-p-y">
        <h4 class="fw-bold py-3 mb-4">Cụm phòng</h4>
        <div class="card">
            <div class="card-header row">
                <div class="col-md-6">
                    <h5>Sửa cụm phòng</h5>
                </div>
                <div class="col-md-6 text-end">
                    <a href="@Url.Action("Index", "Cluster")" class="btn btn-primary text-white"><i class="fa-solid fa-rotate-left"></i> Trở về</a>
                    <button type="submit" class="btn btn-success text-white"><i class="fa-solid fa-floppy-disk"></i> Cập nhật</button>
                </div>
            </div>
            <div class="card-body">
                <div class="form-group">
                    <label for="AddressCluster">Địa chỉ</label>
                    @Html.TextBoxFor(m => m.AddressCluster, new { @class = "form-control my-2" })
                </div>
                <div class="form-group">
                    <label for="ManagementName">Tên người quản lý</label>
                    @Html.TextBoxFor(m => m.ManagementName, new { @class = "form-control my-2" })
                </div>
                <div class="form-group">
                    <label for="ManagementPhone">Số điện thoại người quản lý</label>
                    @Html.TextBoxFor(m => m.ManagementPhone, new { @class = "form-control my-2" })
                </div>
                <div class="form-group">
                    <label for="ManagementEmail">Email người quản lý</label>
                    @Html.TextBoxFor(m => m.ManagementEmail, new { @class = "form-control my-2" })
                </div>
                <div class="form-group">
                    <label for="StatusRT">Trạng Thái cụm phòng</label>
                    @Html.DropDownListFor(m => m.ClusterS, new SelectList(ViewBag.clusterStatus, "IDStatus", "StatusName"), new { @class = "form-control my-2" })
                </div>
            </div>
        </div>
    </div>
}