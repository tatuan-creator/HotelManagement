@model HotelManagement.Models.Customer

@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm("Create", "Customer", FormMethod.Post))
{
    <div class="container-xxl flex-grow-1 container-p-y">
        <h4 class="fw-bold py-3 mb-4">Khách hàng</h4>
        <div class="card">
            <div class="card-header row">
                <div class="col-md-6">
                    <h5>Thêm khách hàng</h5>
                </div>
                <div class="col-md-6 text-end">
                    <a href="@Url.Action("Index", "RoomType")" class="btn btn-primary text-white"><i class="fa-solid fa-rotate-left"></i> Trở về</a>
                    <button type="submit" class="btn btn-success text-white"><i class="fa-solid fa-plus"></i> Thêm</button>
                </div>
            </div>
            <div class="card-body">
                <div class="form-group">
                    <label for="FullName">Họ tên</label>
                    @Html.TextBoxFor(m => m.FullName, new { @class = "form-control my-2" })
                </div>
                <div class="form-group">
                    <label for="email">Email</label>
                    @Html.TextBoxFor(m => m.email, new { @class = "form-control my-2" })
                </div>
                <div class="form-group">
                    <label for="Phone">Số điện thoại</label>
                    @Html.TextBoxFor(m => m.Phone, new { @class = "form-control my-2" })
                </div>
                <div class="form-group">
                    <label for="ID">CMND/CCCD</label>
                    @Html.TextBoxFor(m => m.ID, new { @class = "form-control my-2" })
                </div>
                <div class="form-group">
                    <label for="Password">Mật khẩu</label>
                    @Html.TextBoxFor(m => m.Password, new { @class = "form-control my-2" })
                </div>
                <div class="form-group">
                    <label for="StatusRT">Trạng thái</label>
                    @Html.DropDownListFor(m => m.CustomerS, new SelectList(ViewBag.customerStatus, "IDStatus", "StatusName"), new { @class = "form-control my-2" })
                </div>
            </div>
        </div>
    </div>
}
